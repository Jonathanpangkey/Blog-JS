<div class="container-form">
  <form class="new-form" action="/posts/new" method="post">
    <%- include('messages.ejs') %>
    <h3>New Post</h3>
    <div class="form-group">
      <label for="description">Title</label>
      <input type="text" name="title" class="form-control" id="title">
    </div>
    <div class="form-group mb-2">
      
    <label>Your content</label>
    <div class="grow-wrap">
    <textarea required name="body" id="body" class="textarea form-control" onInput="this.parentNode.dataset.replicatedValue = this.value"></textarea>
    </div>
    
    <a href="/" class="btn btn-secondary mt-2">Cancel</a>
    <button type="submit" class="btn btn-gold mt-2">Save</button>
  </form>
  
</div>